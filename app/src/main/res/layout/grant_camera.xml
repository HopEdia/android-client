<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
	<RelativeLayout
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:clickable="true"
		android:id="@+id/grantCamera">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/imageButtonBarcodeAdd"
			app:srcCompat="@drawable/barcode_add"
			android:background="@android:color/transparent"
			android:contentDescription="@string/ic_grant_camera"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/allow_barcode"
			android:layout_below="@+id/imageButtonBarcodeAdd"
			android:layout_centerHorizontal="true"/>
	</RelativeLayout>

</RelativeLayout>